<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ffffff"
     >

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/startButton"
        android:layout_toRightOf="@+id/startButton"
        android:textColor="#ffffff"
        android:text=" 关闭wifi "
        android:background="@drawable/bg_num_button"
         />

    <Button
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/stopButton"
        android:layout_toRightOf="@id/stopButton"
        android:text=" 更新wifi状态 " 
        android:textColor="#ffffff"
        android:background="@drawable/bg_num_button"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/checkButton"
        android:layout_alignBaseline="@id/checkButton"
        android:text="" 
        android:textColor="#ee00ee"
        />

	<ImageView
	    android:id="@+id/logoImageView"
	    android:layout_width="match_parent"
	    android:layout_height="50sp"
	    android:layout_gravity="center"
	    android:src="@drawable/logo_1" 
	    android:scaleType="centerInside"
	    />
	
	<TextView
	    android:id="@+id/appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RSS Collection"
        android:textSize="30sp"
        android:gravity="center"
		android:layout_below="@id/logoImageView"
        />
	<TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
		android:layout_below="@id/appname"
		android:background="#FF34B3"
        />
    
    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/startButton"
        android:layout_below="@id/appname"
        android:divider="#ee3b3b"
		android:dividerHeight="1px" 
         >
    </ListView>

    <Button
        android:id="@+id/scanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="  扫描wifi热点  " 
        android:textColor="#ffffff"
        android:background="@drawable/bg_num_button"
        />
	<Button
        android:id="@+id/connecttedButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/scanButton"
        android:text="  查看已连接网络  " 
        android:textColor="#ffffff"
		android:background="@drawable/bg_num_button"
        />
    
	<Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/scanButton"
        android:text=" 打开wifi "
        android:textColor="#ffffff"
        android:background="@drawable/bg_num_button"
         />

	<ToggleButton
	    android:id="@+id/toggleButton1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textOn="关闭RSS数据采集"
	    android:textOff="开启RSS数据采集"
	    android:textColor="#ffffff"
	    android:layout_above="@id/startButton"
	   	android:background="@drawable/bg_toggle_button"
	     />

	<Button
	    android:id="@+id/nextPositionButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text=" 下一位置 " 
	    android:layout_above="@id/toggleButton1"
	    android:layout_alignParentRight="true"
	    android:textColor="#ffffff"
	    android:background="@drawable/bg_num_button"
	    />
	<Button
	    android:id="@+id/previousPositionButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text=" 上一位置 " 
	    android:layout_above="@id/toggleButton1"
	    android:layout_alignParentLeft="true"
	    android:textColor="#ffffff"
	    android:background="@drawable/bg_num_button"
	    />


	<TextView
	    android:id="@+id/positionTextView"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/listView1"
	    android:layout_above="@id/toggleButton1"
	    android:gravity="center"
	    android:text="当前位置：1"
	    android:textColor="#ee00ee" />
	<TextView
        android:id="@+id/dataTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/positionTextView"
        android:text="磁场数据:" 
        android:textColor="#ee00ee"
        android:gravity="center"
        />
    
</RelativeLayout>
